{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "editor.semanticHighlighting.enabled": true,
    "files.associations": {
        "*.dox": "cpp",
        "*.ipp": "cpp",
        "*.tcc": "cpp",
    },
    "cSpell.words": [
        "alpaqa",
        "BFGS",
        "Broyden",
        "crmat",
        "crvec",
        "cwise",
        "Eigen",
        "grad",
        "idvec",
        "ipopt",
        "lbfgs",
        "Lipschitz",
        "p",
        "panoc",
        "quala",
        "r",
        "rmat",
        "rvec",
        "slbfgs",
        "structuredpanoc",
        "Σ_max",
        "ψₖ",
        "ψₖᵀpₖ",
        "ψₖᵀrₖ"
    ],
    "python.formatting.provider": "yapf",
    "editor.rulers": [
        80
    ],
    "[html]": {
        "editor.rulers": [
            120
        ]
    },
    "[latex]": {
        "editor.rulers": [
            120
        ]
    },
    "git.ignoreLimitWarning": true,
    "cmake.configureOnOpen": false,
    "cmake.buildEnvironment": {
        "LD_LIBRARY_PATH": "${workspaceFolder}/py-venv/lib"
    },
    "cmake.configureSettings": {
        "QUALA_WITH_PYTHON_BINDINGS": true
    },
    "cmake.configureEnvironment": {
        "CMAKE_PREFIX_PATH": "${workspaceFolder}/py-venv"
    },
    "editor.unicodeHighlight.allowedCharacters": {
        "γ": true,
        "ρ": true,
        "σ": true,
    },
    "latex-workshop.latex.autoBuild.run": "never",
}